<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="AVLoadingIndicatorColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/action_mode</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="METField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="met_iconPadding">8dp</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="CardViewContainer" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="CardViewHeader" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button" />

    <style name="Button.PhotoEdit" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="Button.PhotoEdit.Action" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="tint">@android:color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="Button.Feed.Action" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:text">2.5K</item>
    </style>

    <style name="Button.NewVibe.Action" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="tint">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>


    <style name="ReadMoreTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:text">@string/read_more</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="List">

    </style>

    <style name="List.Header" parent="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/lorem_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Text.Body" parent="Text" />

    <style name="Text.Time" parent="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.GoalStat" parent="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.PhotoEdit.Action" parent="Text.Time">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Text.PreviewNames" parent="Text">
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="tint">@color/action_mode</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:text">@string/app_name</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Big" parent="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontOptionTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:onClick">setSelectedFonts</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">VibeCampo Social Network</item>
    </style>

    <style name="MiniFab" parent="Widget.Design.FloatingActionButton">
        <item name="android:id">@id/fab</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="useCompatPadding">true</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>
        <item name="fabSize">mini</item>
        <item name="layout_anchorGravity">bottom|end</item>
    </style>

    <style name="Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:id">@id/fab</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="useCompatPadding">true</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
