<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/cell_feed">

    <FrameLayout
        android:id="@+id/likesCountView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="@dimen/list_row_padding"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">


        <ke.co.toshngure.basecode.view.MaterialTextView
            android:id="@+id/likesCountTV"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/list_row_padding"
            android:drawableLeft="@drawable/ic_favorite_black_24dp"
            app:tint="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="2.5K"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/commentsCountView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="@dimen/list_row_padding"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <ke.co.toshngure.basecode.view.MaterialTextView
            android:id="@+id/commentsCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/list_row_padding"
            android:drawableLeft="@drawable/ic_comment_black_24dp"
            app:tint="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="2.5K"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/revibeView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="@dimen/list_row_padding"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subdirectory_arrow_left_black_24dp"
            android:layout_gravity="center"
            android:tint="@color/colorPrimary"
            android:rotation="180"/>

    </FrameLayout>

</LinearLayout>