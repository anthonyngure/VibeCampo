<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ke.co.toshngure.basecode.view.MaterialButton
            android:id="@+id/rotateLeftBtn"
            style="@style/Button.PhotoEdit.Action"
            android:drawableTop="@drawable/ic_rotate_left_black_24dp"
            android:text="@string/left" />

        <ke.co.toshngure.basecode.view.MaterialButton
            android:id="@+id/rotateRightBtn"
            style="@style/Button.PhotoEdit.Action"
            android:drawableTop="@drawable/ic_rotate_right_black_24dp"
            android:text="@string/right" />

    </LinearLayout>


</HorizontalScrollView>